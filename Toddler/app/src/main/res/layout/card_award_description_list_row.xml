<?xml version = "1.0" encoding = "utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="13dp"
    card_view:cardElevation="0dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/award_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/award_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:gravity="center"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/normal_not_achieved" />

        <TextView
            android:id="@+id/award_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Título da conquista"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintTop_toBottomOf="@id/award_logo"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/award_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:gravity="center"
            android:textSize="16sp"
            card_view:layout_constraintTop_toBottomOf="@id/award_title"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
