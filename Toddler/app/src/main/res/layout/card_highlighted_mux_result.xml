    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="130dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_background"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/exercise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/cardColor3"
            android:visibility="invisible"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/exercise_question"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Qual é a xxxx?"
            android:textColor="@color/colorAccent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="@id/exercise_number"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp" />


