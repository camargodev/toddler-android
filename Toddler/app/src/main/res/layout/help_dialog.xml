<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/square"
    android:backgroundTint="@color/colorAccent"
    tools:context=".activity.DisplayResultsActivity">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Como usar?"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/explaining_click"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:text="Bem-vindo ao Toddler. Aqui, vocÃª vai aprender brincando!"
        app:layout_constraintTop_toBottomOf="@id/welcome_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/go_next_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/explaining_click"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="  Legal  "
        android:background="@drawable/square"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/cardColor4"/>

</androidx.constraintlayout.widget.ConstraintLayout>